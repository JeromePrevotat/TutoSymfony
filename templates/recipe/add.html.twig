{% extends 'base.html.twig' %}

{% block title %}Add Recipe{% endblock %}

{% block body %}
<h1>Add a new Recipe</h1>
{{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.title) }}
        {{ form_row(form.slug) }}
        {{ form_row(form.duration) }}
        {{ form_row(form.content) }}
    </div>
{{ form_end(form) }}
{% endblock %}